<body>
    
    <%- include("partials/header.ejs") %>


   <div class="new-container">
  <h2>Add a New Book</h2>
  <form action="/books/add" method="POST" class="book-form">
    <label for="title">Book Title:</label>
    <input type="text" id="title" name="title" required>

    <label for="date_read">Date Read:</label>
    <input type="date" id="date_read" name="date_read" required>

    <label for="short_review">Short Review:</label>
    <textarea id="short_review" name="short_review" rows="7" required></textarea>

    <label for="long_review">Long Review:</label>
    <textarea id="long_review" name="long_review" rows="9" required></textarea>

    <label for="rating">Rating (1 to 5):</label>
    <input type="number" id="rating" name="rating" min="1" max="5" step="1" required>

    <label for="recommendation">Recommendation out of 10:</label>
    <input type="number" id="recommendation" name="recommendation" min = "1" max="10" required>

    <button type="submit">âž• Add Book</button>
  </form>
</div>

</div>



